<body>
  <%- include("./partials/nav.ejs") %>
     

  <div class="wrapper">
    <form action="/new" method="POST">
    <label for="flavour">Create Flavour</label>
    <input type="text" id="flavour" name="flavour" required>
    <button>Create!</button>
    </form>
        </div>

    <form action="/vote/:id" method="PUT" name="vote" value="FLAVOURS">
        
          <% flavour.forEach(flave => { %> 

            <h3 class="flavour"><%= flave.flavour %> </h3>
            <p class="vote"><%= flave.vote %> </p>
            <button>VOTE</button>
            <% }) %> 
          
          
    </form>


   
